/* pages/search/search.wxss */

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rrpx;
  height: 128rrpx;
  margin: 20rrpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200rpx;
}

.suggest-song-name {
  color: #666;
  font-size: 30rpx;
}

.song-name {
  color: #507daf;
  /* font-size: 18rpx; */
  width: 560rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: block;
  float: left;
}

.song-singer {
  color: #888;
  font-size: 20rpx;
  padding-left: 10rpx;
  width:100rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: inline-block;
  vertical-align: middle;
}
